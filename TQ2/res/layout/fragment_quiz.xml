<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/QuizFragment_drawerImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/m1"
        android:background="#c92064"
        android:src="@drawable/drawer_shadow" />

    <LinearLayout
        android:id="@+id/QuizFragment_admobLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/QuizFragment_scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/quote_pressed_pink"
            android:padding="@dimen/m3"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />

        <ScrollView
            android:id="@+id/QuizFragment_contentScroll"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:gravity="center"
            android:scrollbars="vertical" >

            <TextView
                android:id="@+id/QuizFragment_quoteText"
                style="@style/text_quotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/quote_border_pink"
                android:gravity="center"
                android:padding="@dimen/m5"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:typeface="serif" />
        </ScrollView>

        <TextView
            android:id="@+id/QuizFragment_attemptsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/quote_pressed_pink"
            android:padding="@dimen/m3"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/QuizFragment_answersLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/m1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/QuizFragment_firstAnswerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/quote_selector_pink"
                    android:minHeight="50dp"
                    android:text="Button"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/QuizFragment_secondAnswerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/quote_selector_pink"
                    android:minHeight="50dp"
                    android:text="Button"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/QuizFragment_thirdAnswerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/quote_selector_pink"
                    android:minHeight="50dp"
                    android:text="Button"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/QuizFragment_fourthAnswerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/quote_selector_pink"
                    android:minHeight="50dp"
                    android:text="Button"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>