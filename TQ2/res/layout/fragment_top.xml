<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/TopFragment_drawerImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#c92064"
        android:src="@drawable/drawer_shadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TopFragment_emptyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/m10"
            android:background="@drawable/quote_pressed_white"
            android:shadowColor="#ffffff"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="@string/emptyText"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="italic"
            android:typeface="serif" />

        <ScrollView
            android:id="@+id/TopFragment_scrollLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/m1"
            android:layout_marginRight="@dimen/m1"
            android:layout_weight="1"
            android:fillViewport="true" >

            <LinearLayout
                android:id="@+id/TopFragment_contentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >
            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/TopFragment_clearButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/m50"
            android:layout_marginRight="@dimen/m50"
            android:background="@drawable/quote_selector_pink"
            android:text="@string/clear_rating"
            android:shadowColor="#ffffff"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2" />

    </LinearLayout>

</LinearLayout>