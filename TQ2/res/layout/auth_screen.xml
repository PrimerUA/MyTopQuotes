<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/auth_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aacfa064"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/auth_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher_big" />
    
    <com.google.android.gms.common.SignInButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/abs__action_button_min_width"
        android:layout_marginTop="@dimen/abs__action_bar_title_text_size" />

</LinearLayout>